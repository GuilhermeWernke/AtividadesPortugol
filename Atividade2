programa {
  inclua biblioteca Matematica
  funcao inicio() {
    
    real a = 0
    real b = 0
    real c = 0


    escreva("Informe uma Temperatura ")
    leia(a)
    se(a>0){
      escreva("Positivo!")

    }
    senao se(0>a){
      escreva("Negativo!!!")

    }
    senao{
      escreva("0 Graus!!!!")

    }
  }
}

