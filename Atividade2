programa {
  inclua biblioteca Matematica
  funcao inicio() {
    
    real a = 0
    real b = 0
    real c = 0


    escreva("Informe um número ")
    leia(a)
    escreva("Informe outro número ")
    leia(b)
    se(a>b){
      escreva(a)

    }
    senao se(b>a){
      escreva(b)

    }
    senao{
      escreva("a igual a b")

    }

 
  }
}

