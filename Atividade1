5_
programa {
	funcao inicio() {
	inteiro X
	inteiro L1
	inteiro L2
	
	escreva("O eletricista necesitará " X = X*X == 11,5 * 11,5 + 6,3 * 6,3" metros de fios")
	escreva("Lado 1 ")
	leia(L1)
	escreva("Lado 2 ")
	leia(L2)
	escreva("O eletricista necesitará " X = X*X == L1 * L1 + L2 * L2" metros de fios")
	}
}
