	programa {
		funcao inicio() {
		real M = 0,2408467
		real V = l 0,61519726
		real J =  11,862615
		real I
		cadeia E
			escreva("Minha idade em mercurio será: " 977000000 / M )
			escreva("/n Qual a sua idade? ")
			leia(I)
			escreva("Escolha um planeta entre Júpiter e Vênus /n(J para Júpier e V para Vênus) ")
			leia(E)
			se ( E = J){escreva("Sua idade será: " I / J)}
			senao se ( E = V){escreva("Sua idade será: "I / V)}
			senao{escreva("Não encontrei está resposta")}
			
		
	}
}
